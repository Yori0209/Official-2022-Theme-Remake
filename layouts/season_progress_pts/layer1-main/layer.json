{
    "BlockRoot": {
        "Name": "mainStack",
        "BlockType": "stack",
        "Margin": "{MarginRoot}",       
        "Orientation": "Vertical",
        "Items": [
            ///header block
            {
                "BlockType" : "component",
                "ComponentName" : "header_block",
                "ComponentOptions" : {
                    "Vars" : {
                        "headerlefttext" : "{Season.LeagueInfo.LeagueShortName} · {Season.Name} · Progress / Points"
                    }
                }
            },

            //separator
            {
                "BlockType" : "component",
                "ComponentName" : "separator"
            },
            //table
            {
                "Name": "mainTable",
                "BlockType": "table",
                "Margin": "{MarginTable}",
                "TableOptions": {
                    "ItemsSource": "{Standings.Drivers}",
                    "HeaderTemplate": {
                        "BlockType": "text",
                        "MarginBottom": 8,
                        "TextOptionsExtern" : "tableHeader"
                    },
                    "Columns": [
                        //position
                        {
                            "Header": "",
                            "Template": {
                                "BlockType": "component",
                                "ComponentName": "position_cell",
                                "ComponentOptions": {
                                    "Vars": {
                                        "position": "{Item.Position}"
                                    }
                                }
                            }
                        },

                        //driver with team line
                        {
                            "Header": "",
                            "MarginRight" : 24,
                            "Template": {
                                "BlockType": "component",
                                "ComponentName": "driver_and_team_dock"
                            }
                        },

                         //points
                         {
                            "Header": "",
                            "MarginLeft" : 20,
                            "Template": {
                                
                                "BlockType": "dock",
                                "PaddingLeft" : 24,
                                "PaddingRight" : 24,
                                "Items": [                                    
                                    {
                                        "BlockType": "text",
                                        "Source": "{Item.Points}",
                                        "HorizontalAlignment": "Right",
                                        "VerticalAlignment": "Center",
                                        "TextOptionsExtern": "teamCell"
                                    }
                                ],
                                "Triggers" :
                                [
                                    {
                                        "Condition" : "{Standings.IsPositionJumpForDriversExists}",
                                        "Property" : "PaddingRight",
                                        "Value" : 4
                                    }
                                ]
                            }
                        },

                         //position_jump
                         {
                            "Header": "",
                            "PaddingLeft" : 0,
                            "MarginLeft" : -8,
                            "Template":
                            {
                                "BlockType" : "component",
                                "PaddingLeft" : 0,                               
                                "PaddingRight" : 12,
                                "ComponentName" : "jump_cell"    
                            }
                        },

                        //events
                        {
                            "MarginLeft" : 6,
                            "MultiColumnHeadersSource": "{Standings.Events}",
                            "MultiColumnItemsSource": "{Item.Events}",
                            "MultiColumnHeaderTemplate": {
                                "BlockType": "stack",
                                "Orientation": "Vertical",
                                "Spacing": 4,
                                "HorizontalAlignment": "Center",
                                "Items": [
                                    {
                                        "BlockType": "image",
                                        "Source": "{Item.Track.Nation.LogoPath}",
                                        "HorizontalAlignment": "Center",
                                        "Height": 32
                                    },
                                    {
                                        "BlockType": "text",
                                        "MarginBottom": 8,
                                        "HorizontalAlignment": "Center",
                                        "Source": "{Item.Track.Nation.Code}",
                                        "TextOptionsExtern" : "tableHeader"                   
                                    }
                                ]
                            },
                            "Width": 55,
                            "Template": {
                                "Padding": "12, 0",
                                "BlockType": "text",
                                "Source": "{Item.PointsString}",
                                "HorizontalAlignment": "Left",
                                "TextOptionsExtern" : "positionNumber",
                                "TextOptions": {
                                    "HorizontalAlignment": "Center"
                                },
                                "Triggers": [
                                    {
                                        "Condition": "{Item.IsRaceMajorParticipied, Converter=BoolReverse}",
                                        "Setters": [
                                            {
                                                "Property": "Source",
                                                "Value": ""
                                            }
                                        ]
                                    },
                                    {
                                        "Condition": "{Item.Points, Converter=NumberEquals, Parameter=0}",
                                        "Setters": [
                                            {
                                                "Property": "Foreground",
                                                "Value": "{SeasonProgressPointsZeroForeground}"
                                            }
                                        ]
                                    },
                                    {
                                        "Condition": "{Item.Points, Converter=NumberGreater, Parameter=149}",
                                        "Setters":
                                        [
                                            {
                                                "Property": "Foreground",
                                                "Value": "{SeasonProgressPointsTopForeground}"
                                            }
                                        ]
                                    }
                                ]
                            }
                        }                        
                    ]
                }
            },
            //bg-footer
            {
                "BlockType" : "component",
                "ComponentName" : "bg_footer"
            }
        ]
    }
}