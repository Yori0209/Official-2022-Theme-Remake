{
    "BlockRoot": {
        "Name": "mainStack",
        "BlockType": "stack",
        "Margin": "{MarginRoot}",       
        "Orientation": "Vertical",
        "Items": [
            //header block
            {
                "BlockType" : "component",
                "ComponentName" : "header_block",
                "ComponentOptions" : {
                    "Vars" : {
                        "headerlefttext" : "{Season.LeagueInfo.LeagueShortName, Converter=StringToUpperString}  Â·  {Season.Name, Converter=StringToUpperString}  [LINE-UP]"
                    }
                }
            },

            //separator
            {
                "BlockType" : "component",
                "ComponentName" : "separator"
            },
            //table
            {
                "Name": "mainTable",
                "BlockType": "table",
                "Margin": "{MarginTable}",
                "TableOptions": {
                    "ItemsSource": "{Lineups.Lineups}",
                    "RowSpacing": 16,
                    "ColSpacing": 8,
                    "HeaderTemplate": {
                        "BlockType": "text",
                        "MarginBottom": 8,
                        "TextOptionsExtern" : "tableHeader",
                        "TextAlignment" : "Center",
                    },
                    "Columns": [
                        {
                            "Header": "",                           
                            "Template": {
                                "BlockType" : "component",
                                "ComponentName" : "team_cell",
                                "MarginLeft" : 25,
                                "ComponentOptions" :{
                                    "Vars" :{
                                        "MarginRight" : "",
                                        "RenderIf" : "{RenderTeamBadgesOnOtherLayouts}"
                                    }
                                }
                            }
                        },
                        //driver line
                        {
                            "Header": "",
                            "MarginLeft" : 50,
                            "MarginRight" : 24, 
                            "Template": {
                                "BlockType" : "component",
                                "ComponentName" : "driver_cell",
                                "RenderIf": "{Item.IsDriverSet}"
                            }
                            
                        },
                        // races count
                        {
                            "Header": "[RACES]",
                            "Template":
                            {
                                "BlockType": "text",
                                "Source": "{Item.DriverRaces}",
                                "RenderIf": "{Item.IsDriverSet}",
                                "Width": 55,
                                "TextOptions":{
                                    "HorizontalAlignment" : "Center"
                                }
                            }
                        }                                          
                    ]
                }
            },
            //bg-footer
            {
                "BlockType" : "component",
                "ComponentName" : "bg_footer"
            }
        ]
    }
}
