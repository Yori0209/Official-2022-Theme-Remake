{
    "BlockRoot": {
        "Name": "mainStack",
        "BlockType": "stack",
        "Margin": "{MarginRoot}",       
        "Orientation": "Vertical",
        "Items": [
            //header block
            {
                "BlockType" : "component",
                "ComponentName" : "header_block_standings"
            },

            //separator
            {
                "BlockType" : "component",
                "ComponentName" : "separator"
            },
            {
                "Name": "mainTable",
                "BlockType": "table",
                "Margin" : "{MarginTable}",
                "MarginRight" : 200,
                "TableOptions": {
                    "ItemsSource": "{Standings.Drivers}",
                    "HeaderTemplate": {
                        "BlockType": "text",
                        "Foreground" : "{ForegroundRed}",
                        "TextOptionsExtern" : "tableColumnHeader",
                        "FontSize" : "{TableHeaderFontSize}"
                    },
                    "Columns": [
                        //position
                        {
                            "Header": "",
                            "Template": {
                                "BlockType" : "component",                                
                                "ComponentName" : "position_cell",
                                "ComponentOptions" :{
                                    "Vars" :{
                                        "position" : "{Item.Position}"
                                    }
                                }                           
                            }
                        },

                        //driver line
                        {
                            "Header": "",
                            "WidthStretch" : true,                            
                            "Template": {
                                "BlockType" : "component",
                                "ComponentName" : "driver_line_cell"   
                            }
                        },                        

                        //points
                        {
                            "Header": "      PTS",
                            "MarginLeft" : 0,
                            "Template": {
                                
                                "BlockType": "dock",
                                "PaddingLeft" : 24,
                                "PaddingRight" : 26,
                                //"Width": 50,
                                "Items": [                                    
                                    {
                                        "BlockType": "text",
                                        "Source": "{Item.Points}",
                                        "HorizontalAlignment": "Right",
                                        "VerticalAlignment": "Center",
                                        "FontSize": "{TableCellFontSize}",
                                        "Foreground" : "{ForeGroundWhite}",
                                        "TextOptionsExtern": "primaryNumber"
                                    }
                                ],
                                "Triggers" :
                                [
                                    {
                                        "Condition" : "{Standings.IsPositionJumpForDriversExists}",
                                        "Property" : "PaddingRight",
                                        "Value" : 4
                                    }
                                ]
                            }
                        },

                         //position_jump
                         {
                            "Header": "",
                            "PaddingLeft" : 0,
                            "MarginLeft" : -4,
                            "Template":
                            {
                                "BlockType" : "component",
                                "PaddingLeft" : 0,                               
                                "PaddingRight" : 12,
                                "ComponentName" : "position_jump_cell"    
                            }
                        },

                        //podiums
                        {
                            "Header" : "Wins",
                            "MarginLeft" : 20,
                            "Template":{
                                "BlockType" : "text",
                                "Padding": "24, 0",
                                "Source" : "{Item.CountP1, Converter=NumberZeroToEmpty}",
                                "Foreground" : "{ForeGroundWhite}",
                                "FontSize":"{TableCellFontSize}",
                                "TextOptionsExtern" : "primaryNumber"
                            }
                        },
                        {
                            "Header" : "2nd",
                            "MarginLeft" : 0,
                            "Template":{
                                "BlockType" : "text",
                                "Padding": "24, 0",
                                "FontSize":"{TableCellFontSize}",
                                "Foreground" : "{ForeGroundWhite}",
                                "Source" : "{Item.CountP2, Converter=NumberZeroToEmpty}",
                                "TextOptionsExtern" : "primaryNumber"
                            }
                        },
                        {
                            "Header" : "3rd",
                            "MarginLeft" : 0,
                            "Template":{
                                "BlockType" : "text",
                                "Padding": "24, 0",
                                "FontSize":"{TableCellFontSize}",
                                "Source" : "{Item.CountP3, Converter=NumberZeroToEmpty}",
                                "Foreground" : "{ForeGroundWhite}",
                                "TextOptionsExtern" : "primaryNumber"
                            }
                        },

                        //stats
                        {
                            "Header" : "FL",
                            "MarginLeft" : 12,
                            "Template":{
                                "BlockType" : "text",
                                "Padding": "24, 0",
                                "FontSize":"{TableCellFontSize}",
                                "Source" : "{Item.RaceFastestLapCount, Converter=NumberZeroToEmpty}",
                                "Foreground" : "{ForeGroundWhite}",
                                "TextOptionsExtern" : "primaryNumber"
                            }
                        },
                        {
                            "Header" : "Poles",
                            "MarginLeft" : 0,
                            "Template":{
                                "BlockType" : "text",
                                "Padding": "24, 0",
                                "FontSize":"{TableCellFontSize}",
                                "Source" : "{Item.CountQualP1, Converter=NumberZeroToEmpty}",
                                "Foreground" : "{ForeGroundWhite}",
                                "TextOptionsExtern" : "primaryNumber"
                            }
                        },

                        //penalty points
                        {
                            "Header" : "Pen. pts",                            
                            "MarginLeft" : 16,
                            "Template":{
                                "BlockType" : "text",
                                "RenderIf" : "{ShowPenaltyPointsInStandings}",
                                "Padding": "24, 0",
                                "FontSize":"{TableCellFontSize}",
                                "Foreground" : "{ForeGroundWhite}",
                                "Source" : "{Item.PenaltyPoints, Converter=NumberZeroToEmpty}",
                                "TextOptionsExtern" : "primaryNumber"
                            }
                        },

                        //events
                        {
                            "Header" : "Events",
                            "MarginLeft" : 12,
                            "Template":{
                                "BlockType" : "text",
                                "Padding": "24, 0",
                                "FontSize":"{TableCellFontSize}",
                                "Foreground" : "{ForeGroundWhite}",
                                "Source" : "{Item.EventsCount, Converter=NumberZeroToEmpty}",                                
                                "TextOptionsExtern" : "primaryNumber",
                                "MarginRight":30
                            }
                        }


                    ]
                }
                
            },
            //bg-footer
            {
                "BlockType" : "component",
                "ComponentName" : "bg_footer"
            }
        ]
    }
}