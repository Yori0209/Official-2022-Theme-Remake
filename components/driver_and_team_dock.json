{
    "BlockType": "dock",
    "PaddingLeft": 12,
    "PaddingRight": 4,
    "Items": [
        {
            "BlockType": "stack",
            "HorizontalAlignment": "Left",
            "VerticalAlignment": "Center",
            "Items": [
                //flag
                {
                    "BlockType": "image",
                    "Height": 19,
                    "MarginRight": 12,
                    "PaddingBottom" : 4,
                    "VerticalAlignment": "Center",
                    "ImageOptions": {
                        "Path": "{Item.Driver.Nationality.LogoPath}",
                    },
                    "RenderIf": "{RenderDriverFlags}"
                    
                },
                //Driver Name
                {
                    "BlockType": "text",
                    "MaxWidth": 300,
                    "MarginRight": 150,
                    "Source": "{Item.Driver.Name, Converter=StringToUpperString}",
                    "HorizontalAlignment": "Left",
                    "VerticalAlignment": "Center",
                    "TextOptionsExtern": "driverCell"
                }
            ]
        },

        //teams block
        {
            "BlockType": "stack",
            "VerticalAlignment": "Center",
            "HorizontalAlignment": "Right",
            "Spacing": 8,
            "RenderIf": "{Season.LineupsBasedType, Converter=StringEquals, Parameter=Teams}",
            "Items": [
                //name
                {
                    "BlockType": "text",
                    "Source": "{Item.Team.Name}",
                    "HorizontalAlignment": "Left",
                    "VerticalAlignment": "Center",
                    "TextOptionsExtern": "teamCell", 
                    "TextOptions": {
                        "VerticalAlignment": "Center"
                    }
                },

                //logo
                {
                    "BlockType": "image",
                    "Height": 40,
                    "MarginRight": 0,
                    "VerticalAlignment": "Center",
                    "ImageOptions": {
                        "Path": "{Item.Team.LogoPath}",
                        "VerticalAlignment": "Center"
                    }
                }
            ]
        }
    ]
}